# ======== APP CONFIG ========
HOST=127.0.0.1
PORT=4444
NODE_ENV=development
APP_NAME=Nux
APP_VERSION=0.1.0

# ======== CORS CONFIG ========
CORS_ORIGIN=*

# ======== DATABASE CONFIG (Postgres) - TESTE ========
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password
POSTGRES_DB=nux_test
POSTGRES_HOST=localhost
POSTGRES_PORT=4445

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public

# ======== REDIS CONFIG ========
REDIS_HOST=localhost
REDIS_PORT=4446
REDIS_PASSWORD=test_redis_password

# ======== FILE UPLOAD CONFIG ========
MAX_FILE_SIZE=10485760 # 10 MB em bytes

# ======== LOGGING CONFIG ========
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_PRETTY_COLORIZE=true
LOG_PRETTY_TRANSLATE_TIME=SYS:yyyy-mm-dd HH:MM:ss
LOG_PRETTY_IGNORE=pid,hostname
LOG_PRETTY_SINGLE_LINE=true
LOG_FILE_MAX_DAYS=7
LOG_FILE_ZIPPED=true
LOG_REDACT_PATHS=req.headers.authorization,req.headers.cookie,req.headers["x-api-key"],*.password

# ======== JWT CONFIG ========
JWT_SECRET=test_jwt_secret_123456
JWT_EXPIRES_IN=7d
REFRESH_SECRET=test_refresh_secret_123456
REFRESH_EXPIRES_IN=7d

# ======== RATE LIMIT CONFIG ========
RATE_LIMIT_MAX=500
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_BAN=10
RATE_LIMIT_CACHE=50000
RATE_LIMIT_NAMESPACE=nux-test-rate-limit-
RATE_LIMIT_INFO_MESSAGE=Rate limiting is disabled in development

# ======== SEND EMAIL CONFIG ========
EMAIL_API_KEY=test_email_api_key_123
EMAIL_FROM=test@fakemail.com
EMAIL_SEND_TYPE=outbound
